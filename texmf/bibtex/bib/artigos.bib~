journal = {Physical Review Letters},
mendeley-groups = {Plasma Blobs},
month = jun,
number = {26},
pages = {265001},
publisher = {American Physical Society},
shorttitle = {Physical Review Letters},
title = {{Stochastic Modeling of Intermittent Scrape-Off Layer Plasma Fluctuations}},
